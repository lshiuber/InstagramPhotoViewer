<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:id="@+id/ivCProfilePicture"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username + comment"
        android:id="@+id/tvCComment"
        android:textSize="14sp"
        android:lineSpacingMultiplier="1.2"
        android:layout_marginLeft="12dp"
        android:layout_alignTop="@+id/ivCProfilePicture"
        android:layout_toRightOf="@+id/ivCProfilePicture" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PostDate"
        android:id="@+id/tvCPostDate"
        android:textColor="@color/light_gray_text"
        android:textSize="14sp"
        android:layout_marginLeft="12dp"
        android:layout_below="@+id/tvCComment"
        android:layout_toRightOf="@+id/ivCProfilePicture" />

</RelativeLayout>